# KVCA target
# base domain only (do not include /admin/login path)
KVCA_BASE_URL=https://edu.kvca.or.kr

# KVCA admin credentials (do not commit real values)
KVCA_ADMIN_USER_ID=admin@example.com
KVCA_ADMIN_USER_PASSWORD=change_me

# HTTP/Auth behavior
KVCA_REQUEST_TIMEOUT_MS=15000
KVCA_TOKEN_SKEW_SECONDS=60
KVCA_RETRY_ON_401=true

# Worker behavior
KVCA_SYNC_DEFAULT_CATEGORY_ID=
KVCA_MAX_USERS_PER_COURSE=
WORKER_LOG_LEVEL=INFO

# Supabase storage (optional: if empty, worker runs in memory/no-op storage)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_REQUEST_TIMEOUT_MS=15000

# Alert/run controls
ALERT_COOLDOWN_MINUTES=30
JOB_LOCK_TTL_SECONDS=900
